pipeline {
    agent any

    environment {
        AZURE_CREDENTIALS_ID = 'azure-service-principal'
        RESOURCE_GROUP = 'rg-jenkins'
        APP_SERVICE_NAME = 'PythAzureApI'
        PROJECT_PATH = 'PythAzureApI/MyProject.csproj' // Update this with your actual .csproj path
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/Yash2433/PythAzureApI-.git'
            }
        }

        stage('Build') {
            steps {
                // Use actual .csproj path if solution is missing or broken
                bat "dotnet restore ${PROJECT_PATH}"
                bat "dotnet build ${PROJECT_PATH} --configuration Release"
                bat "dotnet publish ${PROJECT_PATH} -c Release -o ./publish"
            }
        }

        stage('Deploy') {
            steps {
                withCredentials([azureServicePrincipal(credentialsId: AZURE_CREDENTIALS_ID)]) {
                    bat '''
                    az login --service-principal -u %AZURE_CLIENT_ID% -p %AZURE_CLIENT_SECRET% --tenant %AZURE_TENANT_ID%
                    if exist publish (
                        powershell Compress-Archive -Path ./publish/* -DestinationPath ./publish.zip -Force
                    ) else (
                        echo Publish directory not found!
                        exit /b 1
                    )
                    az webapp deploy --resource-group %RESOURCE_GROUP% --name %APP_SERVICE_NAME% --src-path ./publish.zip --type zip
                    '''
                }
            }
        }
    }

    post {
        success {
            echo ' Deployment Successful!'
        }
        failure {
            echo ' Deployment Failed!'
        }
    }
}
